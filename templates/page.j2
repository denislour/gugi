{% extends 'base.j2' %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-md-8 card mb-4  mt-3 left  top">
                <div class="card-body">
                    <h1>{% block title %} {{ page.title }} {% endblock title %}</h1>
                    <p class=" text-muted">{{ page.author }} | {{ page.date }}</p>
                    <p class="card-text ">{{ page.html|safe }}</p>
                </div>
            </div>
            {% block sidebar %} {% include 'sidebar.j2' %} {% endblock sidebar %}
        </div>
    </div>

{% endblock content %}